<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>dist-V${project.version}</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>/</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/main/assembly</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
			<excludes>
				<exclude>dist.xml</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/target/amapj</directory>
			<outputDirectory>/amapj-war/</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/target</directory>
			<outputDirectory>/amapj-src/</outputDirectory>
			<includes>
				<include>*src*.zip</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.txt</include>
			</includes>
			<filtered>false</filtered>
		</fileSet>
	</fileSets>
</assembly>